{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RMVL Message",
  "scopeName": "source.rmvl.msg",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#fields"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rmvl.msg",
          "match": "#.*$"
        }
      ]
    },
    "constants": {
      "name": "meta.constant.rmvl.msg",
      "match": "^\\s*([a-zA-Z][a-zA-Z0-9_/]*)\\s+([a-zA-Z][a-zA-Z0-9_]*)\\s*=\\s*(.*)$",
      "captures": {
        "1": {
          "patterns": [
            {
              "include": "#built_in_types"
            },
            {
              "include": "#other_types"
            }
          ]
        },
        "2": {
          "name": "constant.other.rmvl.msg"
        },
        "3": {
          "patterns": [
            {
              "include": "#string_literals"
            },
            {
              "match": "[0-9]+",
              "name": "constant.numeric.integer.rmvl.msg"
            },
            {
              "match": "[0-9]*\\.[0-9]+",
              "name": "constant.numeric.float.rmvl.msg"
            }
          ]
        }
      }
    },
    "fields": {
      "name": "meta.field.rmvl.msg",
      "match": "^\\s*([a-zA-Z][a-zA-Z0-9_/]*)(\\[([0-9]*)\\])?\\s+([a-zA-Z][a-zA-Z0-9_]*)",
      "captures": {
        "1": {
          "patterns": [
            {
              "include": "#built_in_types"
            },
            {
              "include": "#other_types"
            }
          ]
        },
        "2": {
          "name": "meta.array.rmvl.msg"
        },
        "3": {
          "name": "constant.numeric.integer.rmvl.msg"
        },
        "4": {
          "name": "variable.other.rmvl.msg"
        }
      }
    },
    "string_literals": {
      "name": "string.quoted.double.rmvl.msg",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rmvl.msg",
          "match": "\\\\."
        }
      ]
    },
    "built_in_types": {
      "patterns": [
        {
          "name": "storage.type.built-in.rmvl.msg",
          "match": "\\b(bool|string|char|u?int(8|16|32|64)|float(32|64))\\b"
        }
      ]
    },
    "other_types": {
      "patterns": [
        {
          "name": "entity.name.type.rmvl.msg",
          "match": "[a-zA-Z][a-zA-Z0-9_/]*"
        }
      ]
    }
  }
}